[
  {
    "name": "Indeed",
    "url": "https://www.indeed.com/jobs?q=software+intern&l=&fromage=3&sort=date",
    "type": "indeed",
    "selectors": {
      "listings": "[data-jk]",
      "title": "[data-testid='job-title'] a span",
      "company": "[data-testid='company-name']",
      "link": "[data-testid='job-title'] a",
      "location": "[data-testid='job-location']",
      "description": "[data-testid='job-snippet']"
    },
    "notes": "Indeed is most reliable for scraping"
  },
  {
    "name": "SimplyHired",
    "url": "https://www.simplyhired.com/search?q=software+intern&l=&fdb=3",
    "type": "simplyhired", 
    "selectors": {
      "listings": "[data-testid='searchSerpJob']",
      "title": "[data-testid='searchSerpJobTitle']",
      "company": "[data-testid='searchSerpJobCompanyName']",
      "link": "[data-testid='searchSerpJobTitle'] a",
      "location": "[data-testid='searchSerpJobLocation']"
