  },
  {
    "name": "ZipRecruiter",
    "url": "https://www.ziprecruiter.com/jobs-search?search=software+intern&location=&days=3",
    "type": "ziprecruiter",
    "selectors": {
      "listings": ".job_content",
      "title": ".job_link",
      "company": ".company_name",
      "link": ".job_link",
      "location": ".location"
    },
    "notes": "Another reliable job board"
  },
  {
    "name": "Dice Tech Jobs",
    "url": "https://www.dice.com/jobs?q=software%20intern&location=&radius=30&radiusUnit=mi&page=1&pageSize=20&filters.postedDate=THREE",
    "type": "dice",
    "selectors": {
      "listings": "[data-testid='search-result-card']",
      "title": "[data-testid='job-title']",
      "company": "[data-testid='company-name']", 
      "link": "[data-testid='job-title'] a",
      "location": "[data-testid='job-location']"
    },
    "notes": "Tech-focused job board"
  },
  {
    "name": "AngelList (Wellfound)",
    "url": "https://wellfound.com/role/r/intern",
    "type": "angellist",
    "selectors": {
      "listings": "[data-test='StartupResult']",
      "title": "[data-test='JobTitle']",
